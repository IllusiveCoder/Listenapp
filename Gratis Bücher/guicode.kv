# File = notizappcode.kv

Wmanager:
    Erste:
    Zweite:
            
<Erste>:
    name: "first"
    FloatLayout:
        orientation: "vertical"
        Label:
            markup: True
            text: "[color=<#000000>]Listenapp fuer\ngratis Buecher[/color]"
            font_size: root.width/20
            size_hint: 1, 0.15  # relative Größe des Labels
            pos_hint: {"x": 0,"top": .95} # Positionierung des Widgets
            
            
            

        Spinner:
            id: eb
            text: "Willkommen"
            values: ("Starten", "Beenden")
            size_hint: 0.9, 0.1
            pos_hint: {"x": 0.05, "top": 0.5,"center_x": 0.5}
            on_text:
                root.aendern() 
                root.manager.transition.direction = "left"

<Zweite>:
    name: "second"

    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        scroll_distance: 20

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'Bilder/background.png'

        GridLayout:
            size_hint_y: None
            cols: 1
            height: self.minimum_height

            Button:
                id: back
                text: "Zurueck"
                size_hint_y: None
                #pos_hint: {"x": 0, "top": .98}
                height: dp(80)
                background_color: 166/255, 166/255, 166/255,0.4
                on_release:
                    app.root.current = "first" 
                    root.manager.transition.direction = "right"
                    
            Button:
                # 1.Button
                size_hint_y: None
                text: "Rheinwerk Verlag"
                on_press: root.oeffnen("https://www.rheinwerk-verlag.de/openbook/")
                spacing: 5,5
                background_color: 166/255, 166/255, 166/255,0.4
                height: dp(80)

